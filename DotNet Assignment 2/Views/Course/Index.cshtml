@using DotNet_Assignment_2.Models;

@{
    ViewBag.Title = "Course List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2 class="text-center" id="title">@ViewBag.Title</h2>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Course Name</td>
                <td>Course Description</td>
                <td>Teacher Name</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>

            @{
                List<Course> cl = Course.GetCourses();
                foreach (Course course in cl)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.CourseName</td>
                        <td>@course.CourseDescription</td>
                        <td>@course.Teacher</td>
                        <td>
                            <button class="btn btn-success" onclick="alert(Edit item?)">Edit</button>
                            <button class="btn btn-danger" onclick="alert(Delete item?)">Delete</button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>



</div>